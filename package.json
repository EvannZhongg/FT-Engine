{
  "name": "ft-engine",
  "productName": "FT Engine",
  "version": "1.5.0",
  "main": "./out/main/index.js",
  "author": {
    "name": "Evan Zhong",
    "email": "freakthrow@gmail.com"
  },
  "description": "Professional Electronic Referee System by freakthrow",
  "homepage": "https://evannzhongg.github.io/",
  "scripts": {
    "clean": "rm -rf ./dist",
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac && node scripts/rename-mac-artifacts.js",
    "build:mac:all": "npm run build && electron-builder --mac --arm64 --x64 && node scripts/rename-mac-artifacts.js",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.freakthrow.ftengine",
    "productName": "FT Engine",
    "copyright": "Copyright © 2025 freakthrow. All rights reserved.",
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "files": [
      "out/**/*",
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "./config.yaml",
        "to": "config.yaml"
      },
      {
        "from": "./server.py",
        "to": "server.py"
      },
      {
        "from": "./utils",
        "to": "utils"
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "evannzhongg",
        "repo": "ft-engine"
      }
    ],
    "win": {
      "verifyUpdateCodeSignature": false,
      "icon": "resources/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "legalTrademarks": "Freakthrow™",
      "extraResources": [
        {
          "from": "./backend-engine.exe",
          "to": "backend-engine.exe",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "mac": {
      "identity": null,
      "target": [
        "dmg"
      ],
      "icon": "resources/icon.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "resources/entitlements.mac.plist",
      "entitlementsInherit": "resources/entitlements.mac.plist",
      "extendInfo": {
        "NSBluetoothAlwaysUsageDescription": "FT Engine 需要访问蓝牙以连接计分控制器",
        "NSBluetoothPeripheralUsageDescription": "FT Engine 需要访问蓝牙以连接计分控制器"
      },
      "extraResources": [
        {
          "from": "./backend-engine",
          "to": "backend-engine",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "dmg": {
      "backgroundColor": "#1e1e1e",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "FT Engine",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "axios": "^1.13.2",
    "chart.js": "^4.5.1",
    "electron-updater": "^6.1.7",
    "js-yaml": "^4.1.1",
    "lucide-vue-next": "^0.559.0",
    "pinia": "^3.0.4",
    "sass": "^1.95.1",
    "sass-loader": "^16.0.6",
    "vue-chartjs": "^5.3.3",
    "vue-i18n": "^11.2.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config": "^2.1.0",
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@vitejs/plugin-vue": "^6.0.2",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electron-vite": "^5.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-vue": "^10.6.2",
    "prettier": "^3.7.4",
    "vite": "^7.2.6",
    "vue": "^3.5.25",
    "vue-eslint-parser": "^10.2.0"
  }
}